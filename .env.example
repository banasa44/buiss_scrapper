# Database
# Optional. Defaults to ./data/app.db (relative to project root).
DB_PATH=./data/app.db

# InfoJobs
# Required for npm run dev / npm start unless credentials are injected in code.
IJ_CLIENT_ID=your_infojobs_client_id
# Required for npm run dev / npm start unless credentials are injected in code.
IJ_CLIENT_SECRET=your_infojobs_client_secret

# Google Sheets
# Target spreadsheet ID. When set, Sheets integration is enabled.
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
# Service account email (required if Sheets integration is enabled).
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@your-project.iam.gserviceaccount.com
# Service account private key. Use \n for newlines if stored in .env.
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nREPLACE_ME\n-----END PRIVATE KEY-----\n"
# Optional. Stored for completeness; not required for auth.
GOOGLE_PROJECT_ID=your-gcp-project-id

# Runtime toggles (documented but not wired yet)
# Documented in docs/M1/01_define_db_schema.md; no effect today.
STORE_RAW_JSON=0
# Documented in docs/audits/AUDIT_HTTP_MOCKING_HARNESS.md; no effect today.
HTTP_MOCK_MODE=false

# Logging
# Optional. One of: debug, info, warn, error. Defaults to info.
LOG_LEVEL=info
